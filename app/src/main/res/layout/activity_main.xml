<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/img_province"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="150dp">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="กรุณาเลือกจังหวัด"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_pv" />

    <TextView
        android:id="@+id/tv_his"
        android:layout_width="396dp"
        android:layout_height="249dp"
        android:layout_marginTop="44dp"
        android:text="กดปุ่มตรงนี้ดู"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <Button
        android:id="@+id/btn_narathiwat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="48dp"
        android:text="@string/btn_narathiwat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_trad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="ตราด"
        app:layout_constraintBottom_toBottomOf="@+id/btn_narathiwat"
        app:layout_constraintStart_toEndOf="@+id/btn_narathiwat"
        tools:text="@string/btn_trad" />

    <Button
        android:id="@+id/btn_sakaeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="สระแก้ว"
        app:layout_constraintBottom_toBottomOf="@+id/btn_trad"
        app:layout_constraintStart_toEndOf="@+id/btn_trad"
        tools:text="@string/btn_sakaeo" />

    <Button
        android:id="@+id/btn_uthaithani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="อุทียธานี"
        app:layout_constraintBottom_toBottomOf="@+id/btn_sakaeo"
        app:layout_constraintEnd_toEndOf="@+id/tv_his"
        tools:text="@string/btn_uthaithani" />

    <ImageView
        android:id="@+id/img_pv"
        android:layout_width="443dp"
        android:layout_height="267dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trad_img" />

</androidx.constraintlayout.widget.ConstraintLayout>